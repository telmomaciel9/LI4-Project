@model IEnumerable<FeirasNovas.Models.Feiras>

@{
    ViewData["Title"] = "Index";
}


 
<partial name="_Notification" />
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Markets</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Feiras" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp;  Create New Market
            </a>

        </div>
    </div>

    <br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Market Type
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="90%">

                        <a asp-controller="Products" asp-action="Index" asp-route-id="@obj.idFeira"
                           class="btn btn-primary mxn-2"> <i class="bi bi-shop-window"></i> @obj.Categoria</a>


                    </td>

                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@obj.idFeira"
                               class="btn btn-primary mxn-2"><i class="bi bi-pencil-square"></i>Edit</a>

                            <a asp-action="Delete" asp-route-id="@obj.idFeira"
                               class="btn btn-danger mxn-2"><i class="bi bi-trash-fill"></i>Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>