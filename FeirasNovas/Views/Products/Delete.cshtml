@model FeirasNovas.Models.Product

@{
    ViewData["Title"] = "Delete";
}




<form method="post" asp-action="Delete">
    <input asp-for="idProduto" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Product</h2>
            <hr />
        </div>

        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Preco"></label>
            <input asp-for="Preco" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Imagem"></label>
            <input asp-for="Imagem" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Stock"></label>
            <input asp-for="Stock" disabled class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Descricao"></label>
            <input asp-for="Descricao" disabled class="form-control" />
        </div>

        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>

        <a asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>

    </div>
</form>
